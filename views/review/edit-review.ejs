<!--WK06-FINAL ENHANCEMENT 
* contains the ejs template to output the EDIT-REVIEW VIEW(UI) 
* for each vehicle click:
* -->

<!-- Display the title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { %>
        <script>res.redirect('/')</script>
    <% } 
%>

<!-- Display the message Error -->
<%- messages() %>

<% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } 
%>

<!-- Display the Update/Edit Review Form-->
<div class="form-container">
    <form action="/review/update" method="post" class="login-form">
        <input type="hidden" name="review_id" value="<%= review_id %>">
    
        <label for="review_text">Review Text:</label>
        <textarea id="review_text" name="review_text" rows="5" required><%= review_text %></textarea>
    
        <button type="submit">Update Review</button>
    </form>
</div>