<!--WK06-FINAL ENHANCEMENT 
* contains the ejs template to output the DELETE-REVIEW VIEW(UI) 
* for each vehicle click:
* -->

<!-- Display the title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { %>
        <script>res.redirect('/')</script>
    <% } 
%>

<!-- Display the message Error -->
<%- messages() %>


<div class="form-container">
    <p class="notice">Are you sure you want to delete this review? The action cannot be undone.</p>
    
    <div class="review-preview">
        <p><strong>Date:</strong>
            <%= new Date(review_date).toLocaleDateString() %>
        </p>
        <p><strong>Review:</strong> "<%= review_text %>"</p>
    </div>
    
    <form action="/review/delete" method="post" class="login-form">
        <input type="hidden" name="review_id" value="<%= review_id %>">
        <button type="submit">Delete Review</button>
        <a href="/inv/detail/" class="cancel-link">Cancel</a>
    </form>
</div>